pipeline {
    agent any
    parameters 
    {
        string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
        string(name: 'Address', defaultValue: 'Ahmedabad', description: 'Address')
    }
    stages 
    {
        stage('Example') 
        {
            steps 
            {
                echo "Hello ${params.PERSON}"
                echo "Hello ${params.Address}"
            }
        }
    }
}
